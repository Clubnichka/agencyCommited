@model List<Vacancy>
@{
    ViewData["Title"] = "Вакансии";
}


<h1>Вакансии</h1>

<div class="position-absolute top-50 start-50 translate-middle mw-100 w-25" style="background-color:white; border: 3px solid black">
    <table border="1" cellspacing="10">
        <tr><th>Название вакансии</th><th>Необходимый опыт</th><th>Описание</th><th>Необходимый возраст</th><th>Зарплата</th></tr>
        @foreach (Vacancy item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.requiredExpirience</td>
                <td>@item.Description</td>
                <td>@item.requiredAge</td>
                <td>@item.salary</td>
                <td>
                    <form method="post" asp-controller="Home" asp-action="ADdropV">
                        <p><button type="submit" class="btn btn-primary btn-lg">Удалить вакансию</button></p>
                        <input type="hidden" name="vID" value="@item.Id" />
                    </form>
                </td>
            </tr>

        }
    </table>
    <form method="post" asp-controller="Home" asp-action="HomeAdmin">
        <p><button type="submit" class="btn btn-primary btn-lg">Назад</button></p>
    </form>
</div>
