@model agency.Models.Employee
@{
    ViewData["Title"] = "Home Page";
}

<table border="1">
    <tr><th>Имя пользователя</th><th>Оставшееся время</th></tr>
    <tr><td>@Model.Name</td><td>@Model.accessTime ч.</td></tr>
</table>
<p>Услуги не оплачены, функционал недоступен</p>
<div>
    <form method="post" asp-controller="Home" asp-action="pay">
        <p><button type="submit">Оплатить услуги</button></p>
        <input type="hidden" asp-for="Id" value="@Model.Id" />
    </form>
<form method="post" asp-controller="Home" asp-action="Index">
    <p><button type="submit">Назад</button></p>
</form>
