@model agency.Models.Employee
@{
    ViewData["Title"] = "Оплата";
}


<h1>Оплатить услуги</h1>



<div class="position-absolute top-50 start-50 translate-middle mw-100 mw-100" style="background-color:white; border: 3px solid black">

    <h1>Оплатить услуги</h1>



    <div class="col-md-4">

        <div class="form-group">
            <label>Введите номер карты</label>
            <input />
        </div>
        <div class="form-group">
            <label>Введите код cvv</label>
            <input />
        </div>
        <p />
        <p />
        <form method="post" asp-controller="Home" asp-action="payDay">
            <div class="form-group">
                <input type="hidden" asp-for="Id" value="@Model.Id" />
                <input type="submit" value="Оплатить один день" class="btn btn-primary" />
            </div>
        </form>
        <p />
        <p />
        <form method="post" asp-controller="Home" asp-action="payWeek">
            <div class="form-group">
                <input type="hidden" asp-for="Id" value="@Model.Id" />
                <input type="submit" value="Оплатить одну неделю" class="btn btn-primary" />
            </div>
        </form>
        <p />
        <p />
        <form method="post" asp-controller="Home" asp-action="payMounth">
            <div class="form-group">
                <input type="hidden" asp-for="Id" value="@Model.Id" />
                <input type="submit" value="Оплатить один месяц" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</div>
