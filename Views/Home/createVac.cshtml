@model agency.Models.Vacancy

@{
    ViewData["Title"] = "Создать вакакнсию";
}

<h1>Создание вакансии</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Home" asp-action="addvac">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="salary" class="control-label"></label>
                <input asp-for="salary" class="form-control" />
                <span asp-validation-for="salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="requiredAge" class="control-label"></label>
                <input asp-for="requiredAge" class="form-control" />
                <span asp-validation-for="requiredAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="requiredExpirience" class="control-label"></label>
                <input asp-for="requiredExpirience" class="form-control" />
                <span asp-validation-for="requiredExpirience" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="CompanyId" value="@Model.CompanyId"/>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
